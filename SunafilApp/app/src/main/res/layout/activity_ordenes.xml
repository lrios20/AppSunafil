<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/pantoneBlue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Inspector:"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_inspector"
            android:text="JUAN PEREZ EZPINOZA"
            android:textSize="24dp"
            android:textColor="#fff" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="65dp">

    <Button
        android:layout_width="41dp"
        android:layout_height="37dp"
        android:background="@drawable/refresh" />

    <Button
        android:layout_width="41dp"
        android:layout_height="37dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/nube" />

    <Button
        android:layout_width="41dp"
        android:layout_height="37dp"
        android:background="@drawable/salir"
        android:layout_marginLeft="250dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:text="Filtrar por:"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="O/I Concretas" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="O/I Genericas" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="135dp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>